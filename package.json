{
  "name": "ts-backend-template",
  "version": "1.0.0",
  "description": "Modern TypeScript backend template built with Bun runtime, Elysia framework, and Testing Trophy philosophy",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "bun run dist/index.js",
    "start:dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:check": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "bun test --no-coverage",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:contract": "bun test tests/contract",
    "test:e2e": "bun test tests/e2e",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "clean": "rm -rf dist coverage",
    "prepare": "husky",
    "pre-commit": "bun run type-check && bun run lint && bun run format:check && bun run test:coverage",
    "security:audit": "bun audit",
    "security:licenses": "license-checker --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;Python-2.0;MPL-2.0;CC0-1.0;CC-BY-3.0' --excludePackages 'audit-resolve-core@3.0.0-3;npm-audit-resolver@3.0.0-RC.0' --excludePrivatePackages",
    "quality:duplication": "jscpd src/ --threshold 3 --reporters console --format typescript,javascript",
    "quality:complexity": "madge --circular --extensions ts src/",
    "validate:all": "bun run security:audit && bun run security:licenses && bun run quality:duplication && bun run quality:complexity"
  },
  "keywords": [
    "typescript",
    "bun",
    "backend",
    "api",
    "template",
    "elysia",
    "testing-trophy",
    "eslint",
    "prettier",
    "husky"
  ],
  "author": "Template",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/ts-backend-template.git"
  },
  "bugs": {
    "url": "https://github.com/example/ts-backend-template/issues"
  },
  "homepage": "https://github.com/example/ts-backend-template#readme",
  "dependencies": {
    "elysia": "^1.1.12",
    "pino": "^9.4.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.1",
    "@opentelemetry/sdk-node": "^0.54.2",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.54.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "husky": "^9.1.6",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "npm-audit-resolver": "^3.0.0-RC.0",
    "license-checker": "^25.0.1",
    "jscpd": "^4.0.4",
    "madge": "^8.0.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}
